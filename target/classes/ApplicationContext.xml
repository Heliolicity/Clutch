		  <list value-type="java.lang.String">
		    <value>March</value>
		    <value>April</value>
		    <value>May</value>
		    <value>June</value>
		    <value>July</value>
		    <value>August</value>
		    <value>September</value>
		    <value>October</value>
		  </list>
	   </property>
